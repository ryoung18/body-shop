extends ../base.pug

block content
  h1  Edit car  #{car.driver.id} #{car.id}
  form(action=`/drivers/${car.driver.id}/cars/${car.id}?_method=PATCH` method="POST")
    p
      label(for="make") Make &nbsp;
      input(type="text", name="make" ,id="make" ,value=`${car.make}`)
    p
      label(for="model") Model &nbsp;
      input(type="text", name="model" ,id="model", value=`${car.model}`)
    p
      label(for="year") Year &nbsp;
      input(type="number", name="year", id="year", value=`${car.year}`)
    p
      button Edit car

  br

  form(action=`/drivers/${car.driver.id}/cars/${car.id}?_method=DELETE` method="POST")
    button X

